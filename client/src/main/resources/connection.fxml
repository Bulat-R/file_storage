<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="300.0" maxWidth="250.0" minHeight="300.0" minWidth="250.0" prefHeight="300.0" prefWidth="250.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.ConnectionWindowController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <TextField fx:id="hostTextField" alignment="CENTER" promptText="host" />
      <TextField fx:id="portTextField" alignment="CENTER" promptText="port" />
      <TextField fx:id="emailTextField" alignment="CENTER" promptText="email" />
      <PasswordField fx:id="passwordTextField" alignment="CENTER" promptText="password" />
      <CheckBox fx:id="checkBox" mnemonicParsing="false" selected="true" text="remember" />
      <Button fx:id="connectButton" mnemonicParsing="false" onAction="#connect" text="Connect" />
   </children>
</VBox>
